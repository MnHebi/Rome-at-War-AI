
(defrule
	(goal current-phase 5)
	(and
		(unit-type-count-total argyraspide g:< gl-five-percent)
		(unit-type-count-total elite-argyraspide g:< gl-five-percent)
	)
	(or
		(can-train argyraspide)
		(can-train elite-argyraspide)
	)
=>
	(train argyraspide)
	(train elite-argyraspide)
)

(defrule
	(goal current-phase 5)
	(unit-type-count-total tessarakonteres g:< 1)
	(can-train tessarakonteres)
=>
	(train tessarakonteres)
)