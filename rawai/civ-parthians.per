
(defrule
	(goal current-phase 5)
	(goal train-counter-infantry 1)
	(and
		(unit-type-count-total grivpanvar g:< desired-number-antiinfantry)
		(unit-type-count-total elite-grivpanvar g:< desired-number-antiinfantry)
	)
	(or
		(can-train grivpanvar)
		(can-train elite-grivpanvar)
	)
=>
	(train grivpanvar)
	(train elite-grivpanvar)
)