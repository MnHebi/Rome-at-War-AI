
(defrule
	(building-type-count-total commandery <= 2)
	(can-build commandery)
=>
	(build commandery)
)

(defrule
	(goal current-phase 5)
	(and
		(unit-type-count-total xiaowei g:< gl-one-percent)
		(unit-type-count-total elite-xiaowei g:< gl-one-percent)
	)
	(or
		(can-train xiaowei)
		(can-train elite-xiaowei)
	)
=>
	(train xiaowei)
	(train elite-xiaowei)
)

