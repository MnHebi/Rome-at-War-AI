
(defrule
	(goal current-phase 5)
	(and
		(unit-type-count-total chakram-thrower g:< desired-number-uniqueunitone)
		(unit-type-count-total elite-chakram-thrower g:< desired-number-uniqueunitone)
	)
	(or
		(can-train chakram-thrower)
		(can-train elite-chakram-thrower)
	)
=>
	(train chakram-thrower)
	(train elite-chakram-thrower)
)