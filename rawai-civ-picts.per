
(defrule
	(goal current-phase 5)
	(or
		(goal train-anti-infantry 1)
		(goal train-anti-siege 1)
	)
	(and
		(unit-type-count-total woad-raider g:< desired-number-antiinfantry)
		(unit-type-count-total elite-woad-raider g:< desired-number-antiinfantry)
	)
	(or
		(can-train woad-raider)
		(can-train elite-woad-raider)
	)
=>
	(train woad-raider)
	(train elite-woad-raider)
)